# Job submission configuration file
#
<%-
  if setup_command.present?
    # If the first part is source or ., then we check if path is a valid file
    if setup_command.start_with?('source', '.')
      # Split the setup_command by spaces and take the second part as the path
      command_path = setup_command.split(' ')[1]
      # Check if the path is a valid file or directory
      unless Pathname(command_path).exist?
        raise "You're trying to execute '#{setup_command}', but the path '#{command_path}' does not exist"
      end
    end
  end

  # If the queue is one of the restricted ones, only allow up to 4 hours
  restricted_queues = [
    "cpu", "interruptible_cpu",
    "gpu", "interruptible_gpu",
    "nmes_cpu", "nmes_gpu",
    "biomed_a100_gpu", "biomed_a30_gpu"
  ]

  max_hours = 4
  if restricted_queues.include?(queue) && bc_num_hours.to_i > max_hours
    raise "When using the #{queue} queue, max time allowed is 4 hours. Please change the requested time."
  end
-%>
---

#
# Configure the content of the job script for the batch job here
# @see http://www.rubydoc.info/gems/ood_core/OodCore/BatchConnect/Template
#
batch_connect:
  # We use the basic web server template for generating the job script
  #
  # @note Do not change this unless you know what you are doing!
  template: "basic"

  # You can override the command used to query the hostname of the compute node
  # here
  #
  # @note It is **highly** recommended this be set in the global cluster
  #   configuration file so that all apps can take advantage of it by default
  #
  #set_host: "host=$(hostname -A | awk '{print $2}')"

#
# Configure the job script submission parameters for the batch job here
# @see http://www.rubydoc.info/gems/ood_core/OodCore/Job/Script
#
script:
  queue_name: <%= queue %>
  copy_environment: true
  native: 
    - "--cpus-per-task=<%= num_cores.blank? ? "1" : num_cores %>"
    - "--mem=<%= memory.blank? ? "2G" : memory + "G" %>"
    - "--gres=gpu:<%= num_gpus %>"
<%-
  # Set default values if variables are nil
  gpu_type ||= "any"
  cpu_arch ||= "any"

  constraints = []
  constraints << gpu_type if gpu_type != "any"
  constraints << cpu_arch if cpu_arch != "any"

  if constraints.any?
    constraint_option = "--constraint=#{constraints.join(',')}"
  else
    constraint_option = nil
  end
-%>
<% if constraint_option %>
    - "<%= constraint_option %>"
<% end %>
